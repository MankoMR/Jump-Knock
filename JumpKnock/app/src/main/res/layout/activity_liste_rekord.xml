                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_fourth"
                    app:layout_constraintEnd_toEndOf="@+id/iv_fourth"
                    app:layout_constraintStart_toStartOf="@+id/iv_fourth"
                    app:layout_constraintTop_toTopOf="@+id/iv_fourth"
                    app:layout_constraintVertical_bias="0.19999999"
                    android:textColor="@color/trophyText"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
